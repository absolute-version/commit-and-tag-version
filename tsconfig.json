{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // TODO: Remove this once all of the code is converted to TypeScript
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "baseUrl": ".",
    "lib": ["esnext"],
    "types": ["node"],
    "paths": {
      "@lib/*": ["lib/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["lib", "test", "commitlint.config.cts"],
  "exclude": ["node_modules"]
}
