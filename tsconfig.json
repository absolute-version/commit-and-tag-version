{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "baseUrl": ".",
    "lib": ["esnext"],
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "@typings/*": ["src/typings/*"],
      "@bin/*": ["src/bin/*"],
      "@lib/*": ["src/lib/*"],
      "@test/*": ["test/*"],
      "@mocks/*": ["test/mocks/*"]
    }
  },
  "include": ["src", "test", "commitlint.config.cts", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
